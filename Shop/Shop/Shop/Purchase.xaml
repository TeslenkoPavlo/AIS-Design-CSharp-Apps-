<Window x:Class="Shop.Purchase"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Shop"
        mc:Ignorable="d"
        Title="Purchase" Height="1080" Width="1920" WindowState="Maximized" 
        Padding="10,10,10,7" WindowStyle="None">

    <Window.Background>
        <DrawingBrush TileMode="Tile" Viewport="0,0,300,300" ViewportUnits="Absolute">
            <DrawingBrush.Drawing>
                <DrawingGroup>
                    <GeometryDrawing Brush="#4A90E2">
                        <GeometryDrawing.Geometry>
                            <PathGeometry>
                                <PathFigure StartPoint="0,0" IsClosed="True">
                                    <LineSegment Point="300,0" />
                                    <LineSegment Point="150,150" />
                                </PathFigure>
                            </PathGeometry>
                        </GeometryDrawing.Geometry>
                    </GeometryDrawing>

                    <GeometryDrawing Brush="#5AA0F2">
                        <GeometryDrawing.Geometry>
                            <PathGeometry>
                                <PathFigure StartPoint="0,0" IsClosed="True">
                                    <LineSegment Point="150,150" />
                                    <LineSegment Point="0,300" />
                                </PathFigure>
                            </PathGeometry>
                        </GeometryDrawing.Geometry>
                    </GeometryDrawing>

                    <GeometryDrawing Brush="#357ABD">
                        <GeometryDrawing.Geometry>
                            <PathGeometry>
                                <PathFigure StartPoint="300,0" IsClosed="True">
                                    <LineSegment Point="300,300" />
                                    <LineSegment Point="150,150" />
                                </PathFigure>
                            </PathGeometry>
                        </GeometryDrawing.Geometry>
                    </GeometryDrawing>

                    <GeometryDrawing Brush="#FDFF39">
                        <GeometryDrawing.Geometry>
                            <PathGeometry>
                                <PathFigure StartPoint="0,300" IsClosed="True">
                                    <LineSegment Point="300,300" />
                                    <LineSegment Point="150,150" />
                                </PathFigure>
                            </PathGeometry>
                        </GeometryDrawing.Geometry>
                    </GeometryDrawing>
                </DrawingGroup>
            </DrawingBrush.Drawing>
        </DrawingBrush>
    </Window.Background>



    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">

            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="5*" />
                <RowDefinition Height="2*" />
            </Grid.RowDefinitions>

            <ComboBox x:Name="CategoryItemList" DisplayMemberPath="Name" Width="126" Height="31" HorizontalAlignment="Left" VerticalAlignment="Top" SelectionChanged="CategoryItemList_SelectionChanged" Margin="549,59,0,0" Grid.Row="1" Background="#4A90E2" Foreground="Black" FontSize="16" FontWeight="Bold" BorderBrush="Black" BorderThickness="1" Padding="6,4">
                <ComboBox.Effect>
                    <DropShadowEffect Color="Black" Direction="320" ShadowDepth="4" BlurRadius="6" Opacity="0.5"/>
                </ComboBox.Effect>
            </ComboBox>

            <Label Content="Category:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="549,0,0,0" Grid.Row="1" FontSize="18" FontWeight="Bold" Foreground="White" Padding="8,4" Background="#4A90E2" BorderBrush="Black" BorderThickness="1" RenderTransformOrigin="0.776,0.571">
                <Label.Effect>
                    <DropShadowEffect Color="Black" Direction="320" ShadowDepth="4" BlurRadius="6" Opacity="0.5"/>
                </Label.Effect>
            </Label>

            <ListView x:Name="ProductsItemList"
          SelectionChanged="ProductsItemList_SelectionChanged"
          Margin="10,50,430,10" 
          Background="#22000000" 
          Foreground="White"
          BorderBrush="White" 
          BorderThickness="1"
          Grid.RowSpan="2"
          FontSize="16"
          FontWeight="Bold">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Name" Width="200" DisplayMemberBinding="{Binding Name}" />
                        <GridViewColumn Header="Price" Width="150" DisplayMemberBinding="{Binding Price}" />
                        <GridViewColumn Header="Quantity" Width="150" DisplayMemberBinding="{Binding Quantity}" />
                    </GridView>
                </ListView.View>
            </ListView>

            <DockPanel VerticalAlignment="Center" Margin="50,0,0,0" Grid.Row="2" Width="300"/>

            <Label Grid.Row="1" Content="Amount:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="549,121,0,0" FontSize="18" FontWeight="Bold" Foreground="White" Padding="8,4" Background="#4A90E2" BorderBrush="Black" BorderThickness="1">
                <Label.Effect>
                    <DropShadowEffect Color="Black" Direction="320" ShadowDepth="4" BlurRadius="6" Opacity="0.5"/>
                </Label.Effect>
            </Label>

            <Label x:Name="AmountForProduct" Grid.Row="2" Content="0" 
                    HorizontalAlignment="Center" Margin="100,0,0,0" VerticalAlignment="Center" Visibility="Hidden" />

            <Button Content="Add" Grid.Row="1" Width="150" Height="50" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,240,131,0" Click="Button_Click" Background="#4A90E2" Foreground="White" FontSize="18" FontWeight="Bold" BorderBrush="Black" BorderThickness="2" Cursor="Hand">
                <Button.Effect>
                    <DropShadowEffect Color="Black" Direction="320" ShadowDepth="5" BlurRadius="8" Opacity="0.6"/>
                </Button.Effect>
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                        <Setter Property="Background" Value="#4A90E2"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Style.Triggers>
                            <!-- При наведении -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#5AA0F2"/>
                                <Setter Property="BorderBrush" Value="White"/>
                            </Trigger>
                            <!-- При нажатии -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#357ABD"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            <TextBlock Text="{Binding Value, ElementName=QuantitySlider, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Right" Width="40" Margin="0,182,111,469" Grid.Row="1" FontSize="16" FontWeight="Bold" Background="#4A90E2" Foreground="White" Padding="4,2" TextAlignment="Center">
                <TextBlock.Effect>
                    <DropShadowEffect Color="Black" Direction="320" ShadowDepth="2" BlurRadius="4" Opacity="0.5"/>
                </TextBlock.Effect></TextBlock>
            <Slider Minimum="0" TickPlacement="BottomRight" IsSnapToTickEnabled="True" 
            x:Name="QuantitySlider" ValueChanged="QuantitySlider_ValueChanged" Margin="549,182,151,469" Grid.Row="1" />

        </Grid>
        <Grid Grid.Column="1">

            <Label Content="List of products" Height="43" VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="20" FontWeight="Bold" Margin="196,2,0,0" Background="#4A90E2" Foreground="White" Padding="8,4" BorderBrush="Black" BorderThickness="1" Width="172">
                <Label.Effect>
                    <DropShadowEffect Color="Black" Direction="320" ShadowDepth="4" BlurRadius="6" Opacity="0.5"/>
                </Label.Effect>
            </Label>

            <ListView x:Name="ReceiptProductsItemList" Height="753" VerticalAlignment="Top" Margin="20,50,416,0" Background="#22000000" Foreground="White" BorderBrush="White" BorderThickness="1" FontSize="16" FontWeight="Bold">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Name of Product" Width="200" DisplayMemberBinding="{Binding Product.Name}" />
                        <GridViewColumn Header="Price" Width="100" DisplayMemberBinding="{Binding Product.Price}" />
                        <GridViewColumn Header="Quantity" Width="100" DisplayMemberBinding="{Binding Quantity}" />
                        <GridViewColumn Header="Amount" Width="100" DisplayMemberBinding="{Binding Amount}" />
                    </GridView>
                </ListView.View>
            </ListView>

            <Label Content="Amount:" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,256,993" FontSize="20" FontWeight="Bold" Background="#4A90E2" Foreground="White" Padding="8,4" BorderBrush="Black" BorderThickness="1">
                <Label.Effect>
                    <DropShadowEffect Color="Black" Direction="320" ShadowDepth="4" BlurRadius="6" Opacity="0.5"/>
                </Label.Effect>
            </Label>

            <Label x:Name="Amount" Content="0" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,193,990" FontSize="24" FontWeight="Bold" Background="#4A90E2" Foreground="White" Padding="8,4" BorderBrush="Black" BorderThickness="1">
                <Label.Effect>
                    <DropShadowEffect Color="Black" Direction="320" ShadowDepth="4" BlurRadius="6" Opacity="0.5"/>
                </Label.Effect>
            </Label>

            <Button Content="Delete from list" Height="44" Width="286" Margin="627,0,0,769" VerticalAlignment="Bottom" HorizontalAlignment="Left" Click="Button_Click_1" Background="#FFFB8484" Foreground="White" FontSize="18" FontWeight="Bold" BorderBrush="Black" BorderThickness="2" Cursor="Hand" RenderTransformOrigin="0.548,0.548">
                <Button.Effect>
                    <DropShadowEffect Color="Black" Direction="320" ShadowDepth="5" BlurRadius="8" Opacity="0.6"/>
                </Button.Effect>
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                        <Setter Property="Background" Value="#FFFB8484"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Style.Triggers>

                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFEA6666"/>
                                <Setter Property="BorderBrush" Value="White"/>
                            </Trigger>

                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FFC14444"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button Content="Confirm purchase" Height="44" Width="286" Margin="0,0,47,917" VerticalAlignment="Bottom" HorizontalAlignment="Right" Click="Button_Click_2" Background="#4A90E2" Foreground="White" FontSize="18" FontWeight="Bold" BorderBrush="Black" BorderThickness="2" Cursor="Hand">
                <Button.Effect>
                    <DropShadowEffect Color="Black" Direction="320" ShadowDepth="5" BlurRadius="8" Opacity="0.6"/>
                </Button.Effect>
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                        <Setter Property="Background" Value="#4A90E2"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Style.Triggers>

                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#5AA0F2"/>
                                <Setter Property="BorderBrush" Value="White"/>
                            </Trigger>

                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#357ABD"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button Content="Cancel purchase" Height="44" Width="286" Margin="627,0,0,841" VerticalAlignment="Bottom" HorizontalAlignment="Left" Click="Button_Click_3" Background="#FF658EF9" Foreground="White" FontSize="18" FontWeight="Bold" BorderBrush="Black" BorderThickness="2" Cursor="Hand">
                <Button.Effect>
                    <DropShadowEffect Color="Black" Direction="320" ShadowDepth="5" BlurRadius="8" Opacity="0.6"/>
                </Button.Effect>
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                        <Setter Property="Background" Value="#FF658EF9"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Style.Triggers>

                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF7AA6FF"/>
                                <Setter Property="BorderBrush" Value="White"/>
                            </Trigger>

                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF3C6BCE"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

        </Grid>

    </Grid>
</Window>
