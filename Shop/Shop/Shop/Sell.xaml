<Window x:Class="Shop.Sell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Shop"
        mc:Ignorable="d"
        Title="Sell" Height="800" Width="1200" WindowState="Maximized">

    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#4F46E5" Offset="0"/>
          
            <GradientStop Color="#0EA5E9" Offset="1"/>

        </LinearGradientBrush>
    </Window.Background>



    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <ListView x:Name="ReceiptsItemList" SelectionChanged="ReceiptsItemList_SelectionChanged" Margin="10"
          Background="WhiteSmoke" BorderBrush="Gray" BorderThickness="1" 
          HorizontalContentAlignment="Stretch" VerticalContentAlignment="Center">
            <ListView.Resources>

                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="#4F46E5"/>
                <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="#E5E7EB"/>
            </ListView.Resources>

            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Id" Width="150" DisplayMemberBinding="{Binding Id}" />
                    <GridViewColumn Header="DateTime" Width="150" DisplayMemberBinding="{Binding DateTime}" />
                    <GridViewColumn Header="Amount" Width="150" DisplayMemberBinding="{Binding Amount}" />
                </GridView>
            </ListView.View>
        </ListView>

        <ListView x:Name="ReceiptProductsItemList" Grid.Row="1" Margin="10"
          Background="WhiteSmoke" BorderBrush="Gray" BorderThickness="1" 
          HorizontalContentAlignment="Stretch" VerticalContentAlignment="Center">
            <ListView.Resources>
               
                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="#4F46E5"/>
                <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="#E5E7EB"/>
            </ListView.Resources>

            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name of Product" Width="150" DisplayMemberBinding="{Binding Product.Name}" />
                    <GridViewColumn Header="Price" Width="150" DisplayMemberBinding="{Binding Product.Price}" />
                    <GridViewColumn Header="Quantity" Width="150" DisplayMemberBinding="{Binding Quantity}" />
                    <GridViewColumn Header="Amount" Width="150" DisplayMemberBinding="{Binding Amount}" />
                </GridView>
            </ListView.View>
        </ListView>

        <Button Content="New purchase" 
        Grid.Column="1" Grid.Row="1" 
        Height="50" Margin="10,196,20,0"
        VerticalAlignment="Top" Click="Button_Click_1"
        FontWeight="Bold" FontSize="16" Foreground="White">
            <Button.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#4A90E2" Offset="0"/>
                    <GradientStop Color="#357ABD" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
            <Button.BorderBrush>
                <SolidColorBrush Color="#2A5C9E"/>
            </Button.BorderBrush>
            <Button.BorderThickness>2</Button.BorderThickness>
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" 
                    BorderBrush="{TemplateBinding BorderBrush}" 
                    BorderThickness="{TemplateBinding BorderThickness}" 
                    CornerRadius="12">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background">
                                <Setter.Value>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                        <GradientStop Color="#5AA0F2" Offset="0"/>
                                        <GradientStop Color="#4680C0" Offset="1"/>
                                    </LinearGradientBrush>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background">
                                <Setter.Value>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                        <GradientStop Color="#2A70B2" Offset="0"/>
                                        <GradientStop Color="#1F5690" Offset="1"/>
                                    </LinearGradientBrush>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>


        <Button Content="Delete purchase" 
        Grid.Column="1" Height="50" Margin="30,0,30,0"
        VerticalAlignment="Center" Click="Button_Click"
        FontWeight="Bold" FontSize="16" Foreground="White">
            <Button.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#FFEE6A46" Offset="0"/>
                    <GradientStop Color="#FFCC4A2E" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
            <Button.BorderBrush>
                <SolidColorBrush Color="#FFAA3A20"/>
            </Button.BorderBrush>
            <Button.BorderThickness>2</Button.BorderThickness>
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" 
                    BorderBrush="{TemplateBinding BorderBrush}" 
                    BorderThickness="{TemplateBinding BorderThickness}" 
                    CornerRadius="12">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background">
                                <Setter.Value>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                        <GradientStop Color="#FFFA7A56" Offset="0"/>
                                        <GradientStop Color="#FFD45434" Offset="1"/>
                                    </LinearGradientBrush>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background">
                                <Setter.Value>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                        <GradientStop Color="#FFD45434" Offset="0"/>
                                        <GradientStop Color="#FFB0351E" Offset="1"/>
                                    </LinearGradientBrush>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>


    </Grid>
</Window>
